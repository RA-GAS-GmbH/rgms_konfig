//! # Test gui::gtk3::rwreg_store::fill_and_build_ui()
//!
//! Da das Crate 'gtk-test' nicht richtig funktioniert wurde dieses Beispiel als
//! Integrationstest verwendet.

extern crate gio;
extern crate gtk;
extern crate rgms_konfig;

use gio::prelude::*;
use gtk::prelude::*;
use rgms_konfig::{gui::gtk3::{set_platine, RwregStore}, platine::SensorMbCo2O2};
use std::{env::args, sync::{Arc, Mutex}};


fn fill_and_build_ui(application: &gtk::Application) {
    let window = gtk::ApplicationWindow::new(application);
    window.set_border_width(10);
    window.set_position(gtk::WindowPosition::Center);
    window.set_default_size(800, 600);

    let platine = Box::new(SensorMbCo2O2::new_from_csv().unwrap());
    // Setzt die Platine die verwendet wird.
    let boxed_platine = set_platine(gui_platine.clone(), platine);

    window.add(&rwreg_store_ui);

    window.show_all();
}

fn main() {
    let application =
        gtk::Application::new(Some("com.ra-gas.test.rwreg_store"), Default::default())
            .expect("Initialization failed...");

    application.connect_activate(|app| {
        fill_and_build_ui(app);
    });

    application.run(&args().collect::<Vec<_>>());
}
